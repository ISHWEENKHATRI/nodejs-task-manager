<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <%- include("./partials/header.ejs"); %>
    <div class="container mt-5">
      <form action="/" class="d-flex" method="POST">
        <input type="text" name="task" class="form-control" placeholder="Enter task here...">
        <input type="submit" value="Add Task" class="btn btm-md btn-success mx-2">
      </form>
      <ul class="list-group my-5">
        <% task.forEach(tasks=>{%>
      <div class="row mt-2">
      <div class="col-md-9">
        <li class="list-group-item"><%= tasks.task %></li>
        </div>
        <div class="col-md-3">
        <a href="/delete/task/<%= tasks.id %>" class="btn btm-md btn-danger mx-2">Delete Task</a>
      </div>
      </div>
        <% })%>
        </ul>
    </div>
    <footer>
    <%- include("./partials/footer.ejs"); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>